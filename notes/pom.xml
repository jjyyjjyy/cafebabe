<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>me.jy.java</groupId>
        <artifactId>tech</artifactId>
        <version>1.0.0</version>
    </parent>
    <artifactId>notes</artifactId>

    <properties>
        <!-- plugins -->
        <asciidoctor.version>2.0.0-RC.1</asciidoctor.version>
        <asciidoctorj-diagram>2.0.0</asciidoctorj-diagram>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>org.asciidoctor</groupId>
                <artifactId>asciidoctor-maven-plugin</artifactId>
                <version>${asciidoctor.version}</version>
                <configuration>
                    <sourceDirectory>.</sourceDirectory>
                    <backend>html5</backend>
                    <requires>
                        <require>asciidoctor-diagram</require>
                    </requires>
                    <attributes>
                        <highlightjsdir>highlight</highlightjsdir>
                        <allow-uri-read/>
                    </attributes>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>io.github.jjyy</groupId>
                        <artifactId>asciidoctor-block-switch</artifactId>
                        <version>1.0.0</version>
                        <systemPath>${project.basedir}/lib/asciidoctor-block-switch-1.0.0.jar</systemPath>
                        <scope>system</scope>
                    </dependency>
                    <dependency>
                        <groupId>org.asciidoctor</groupId>
                        <artifactId>asciidoctorj-diagram</artifactId>
                        <version>${asciidoctorj-diagram}</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>

    <pluginRepositories>
        <pluginRepository>
            <id>spring-release</id>
            <name>Spring Release</name>
            <url>https://repo.spring.io/release</url>
        </pluginRepository>
        <pluginRepository>
            <id>asciidoctor</id>
            <name>bintray</name>
            <url>http://dl.bintray.com</url>
        </pluginRepository>
    </pluginRepositories>
</project>
